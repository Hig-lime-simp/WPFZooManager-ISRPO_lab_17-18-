<Window x:Class="WPFZooManager_ISRPO_lab_17_18_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFZooManager_ISRPO_lab_17_18_"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="580">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F0F8FF" Offset="0"/>
            <GradientStop Color="#E0F7E9" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    
    <Grid>
        <Grid.Resources>
            <Style x:Key="ListBoxBorder" TargetType="Border">
                <Setter Property="BorderBrush" Value="#4CAF50"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="CornerRadius" Value="5"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="Padding" Value="5"/>
            </Style>

            <Style x:Key="TextBoxBorder" TargetType="Border">
                <Setter Property="BorderBrush" Value="#2196F3"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="CornerRadius" Value="5"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="Padding" Value="5"/>
            </Style>

            <Style x:Key="AddButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#4CAF50"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="BorderBrush" Value="#2E7D32"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="5"/>
            </Style>

            <Style x:Key="UpdateButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#2196F3"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="BorderBrush" Value="#1976D2"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="5"/>
            </Style>

            <Style x:Key="DeleteButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#F44336"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="BorderBrush" Value="#D32F2F"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="5"/>
            </Style>
        </Grid.Resources>
        <Label Content="Zoo List"
           HorizontalAlignment="Left"
           VerticalAlignment="Top"
           Margin="10,10,0,0"/>

        <ListBox x:Name="listZoos"
             HorizontalAlignment="Left"
             VerticalAlignment="Top"
             Width="155" Height="194"
             Margin="10,41,0,0"/>
        <Label Content="Associated Animals"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="202,10,0,0"/>
        <ListBox x:Name="listAssociatedAnimals"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Width="158" Height="194"
            Margin="202,41,0,0" SelectionChanged="listAssociatedAnimals_SelectionChanged"/>
        <ListBox x:Name="listAllAnimals"
    HorizontalAlignment="Left"
    VerticalAlignment="Top"
    Width="155" Height="277"
    Margin="396,41,0,0"/>
        <!-- Текстовое поле -->
        <TextBox x:Name="myTextBox"
    TextWrapping="Wrap"
    HorizontalAlignment="Left"
    VerticalAlignment="Top"
    Height="39" Width="350"
    Margin="10,274,0,0"/>

        <!-- Кнопки для зоопарков -->
        <Button x:Name="addZooButton"
    Content="Add Zoo"
    Click="AddZoo_Click"
    HorizontalAlignment="Left"
    VerticalAlignment="Top"
    Width="158" Height="34"
    Margin="10,318,0,0"/>

        <Button x:Name="updateZooButton"
    Content="Update Zoo"
    HorizontalAlignment="Left"
    VerticalAlignment="Top"
    Width="158" Height="34"
    Margin="10,357,0,0" Click="UpdateZoo"/>

        <Button x:Name="deleteZooButton"
    Content="Delete Zoo"
    Click="DeleteZoo_Click"
    HorizontalAlignment="Left"
    VerticalAlignment="Top"
    Width="155" Height="34"
    Margin="10,235,0,0"/>

        <!-- Кнопки для животных -->
        <Button x:Name="addAnimalZooButton"
    Content="Add Animal to Zoo"
    HorizontalAlignment="Left"
    VerticalAlignment="Top"
    Width="158" Height="34"
    Margin="202,318,0,0" Click="AddAnimalToZoo_Click"/>

        <Button x:Name="removeAnimalButton"
    Content="Remove Animal"
    HorizontalAlignment="Left"
    VerticalAlignment="Top"
    Width="158" Height="34"
    Margin="202,235,0,0" Click="RemoveAnimal"/>

        <Button x:Name="updateAnimalButton"
    Content="Update Animal"
    HorizontalAlignment="Left"
    VerticalAlignment="Top"
    Width="158" Height="34"
    Margin="202,357,0,0" Click="UpdateAnimal"/>

        <!-- Кнопки для всех животных -->
        <Button x:Name="addAnimalButton"
    Content="Add Animal"
    HorizontalAlignment="Left"
    VerticalAlignment="Top"
    Width="158" Height="34"
    Margin="396,318,0,0" Click="AddAnimal"/>

        <Button x:Name="deleteAnimalButton"
    Content="Delete Animal"
    HorizontalAlignment="Left"
    VerticalAlignment="Top"
    Width="158" Height="34"
    Margin="396,357,0,0" Click="DeleteAnimal"/>
    </Grid>
</Window>
